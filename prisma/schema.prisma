generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CONTENT_TYPE {
  MOVIE
  SERIE
}

model Favorite {
  id          Int          @id @default(autoincrement())
  userId      Int
  contentId   String
  contentType CONTENT_TYPE
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model UserLastAction {
  id        Int      @id @default(autoincrement())
  userId    Int
  updatedAt DateTime @updatedAt
}
